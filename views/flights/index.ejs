<%- include('../partials/header') %>

  <h2>Flight List</h2>
  <table>
    <thead>
      <tr>
        <th>Airline Name</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
    
      <% flights.forEach(function(m) { %>
        <tr>
          <td>
            <%= m.airline %>
          </td>
          <td>
            <%= m.airport %>
          </td>
          <td>
            <%= m.flightNo %>
          </td>
          <td>
            <%= m.departs.toLocaleDateString() %>
          </td>
          <td>
            <form action="/flights/<%= m._id %>">
              <button type="submit">Details</button>
           </form>
            <form action="/flights/<%= m._id %>/tickets/new">

              <button type="submit">New Ticket</button>
           </form>
            
          </td>
         
        </tr>
        <% }); %>
    </tbody>
  </table>
  <%- include('../partials/footer') %>